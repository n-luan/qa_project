<% if logged_in? %>
  <button class="btn btn-primary btn-answer" type="button" data-toggle="collapse"
  data-target="#answers_form" aria-expanded="false"
  aria-controls="collapseExample">
    Answer
  </button>
  <div id="answers_form" class="collapse">
    <%= form_for([question, Answer.new(question: question)], remote: true) do
      |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <br>
      <td><%= f.submit %></td>
    <% end %>
  </div>
<% else %>
  <button class="btn btn-primary btn-answer" type="button" data-toggle="collapse"
  data-target="#answers_form" aria-expanded="false"
  aria-controls="collapseExample">
    <%= link_to "Login First", login_path, {:style=>"color:#FFFFFF;",
      :class => "css_class"} %>
  </button>
<% end %>
